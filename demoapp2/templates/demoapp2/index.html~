<script type="text/javascript">

var wooYayIntervalId = setInterval ( "wooYay()", 1000 );
var counter = 0;


function wooYay ( )
{
  
    document.getElementById("wooYayMessage").innerHTML = counter;
    counter = (counter +1)%3;
  

  setTimeout ( 'document.getElementById("wooYayMessage").innerHTML = ""', 5000 );

}

</script>

<div id="wooYayMessage" style="height: 1.5em; font-size: 2em; color: red;"></div>
